{
  "name": "node-management-system",
  "version": "1.0.0",
  "description": "节点管理系统",
  "main": "electron-main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:single": "vite build --mode single",
    "serve": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage",
    "electron:dev": "electron .",
    "electron:build": "electron-builder"
  },
  "dependencies": {
    "pinia": "^2.1.7",
    "vis-network": "^9.1.2",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.0",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "jsdom": "^22.1.0",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0",
    "vite-plugin-singlefile": "^2.0.1",
    "vitest": "^1.0.0",
    "vitest-canvas-mock": "^0.3.3",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "keywords": [
    "vue",
    "node-management",
    "visualization"
  ],
  "build": {
    "appId": "com.node-management-system.app",
    "productName": "Node Management System",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron-main.js"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}